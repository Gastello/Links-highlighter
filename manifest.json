{
    "manifest_version": 3,
    "name": "Links highlighter",
    "description": "Highlight and count links on any webpage â€“ perfect for linkbuilders!",
    "version": "0.0.1",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  